<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white">
  <!-- header partial -->
  {{> header}}

  <!-- LOGIN SECTION -->
  <div class="min-h-screen bg-gray-100 flex items-center justify-center p-4">
    <div class="max-w-lg w-full bg-white rounded-xl shadow-lg p-12"> <!-- Increased max width and padding -->
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Sign In</h2> <!-- Increased font size -->

      <!-- Login Form -->
      <form class="space-y-6" method="POST" action="/login" autocomplete="off"> <!-- Increased space between form elements -->
        <!-- Username Input -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Username</label> <!-- Increased margin -->
          <input
            type="text"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all"
            placeholder="Enter email"
            name="email"
            aria-label="Email"
            autocomplete="off"
          />
        </div>

        <!-- Password Input -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Password</label> <!-- Increased margin -->
          <input
            type="password"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all"
            placeholder="••••••••"
            name="password" 
            aria-label="Password"
            autocomplete="off"
          />
        </div>

        {{#error}}
          <p class="text-red-500 mt-2 text-sm text-center font-bold">{{error}}</p>
        {{/error}}
        <!-- Sign In Button -->
        <div class="flex justify-center">
          <button type="submit" class="inline-block w-48 text-center py-4 px-6 bg-[#a87c9c] hover:bg-[#c69fb8] text-white font-medium rounded-md"> <!-- Increased size -->
            Sign In
          </button>
        </div>
      </form>


      <!-- Sign Up Link -->
      <div class="mt-8 text-center text-sm text-gray-600">
        Don't have an account? 
        <a href="/register" class="text-indigo-600 hover:text-indigo-500 font-medium">Sign up</a>
      </div>
    </div>
  </div>
</body>
</html>
